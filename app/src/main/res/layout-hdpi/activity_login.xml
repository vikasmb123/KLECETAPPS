<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#536DFE"
    android:alpha=".9"
    >
        <TextView
            android:textColor="#f9fbfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textSize="50dp"
            android:id="@+id/TextViewLoginWelcome"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USN"
            android:layout_marginTop="30dp"
            android:id="@+id/TextViewLoginUSN"
            android:textSize="20dp"
            android:textColor="#fcfffd"
            android:layout_below="@+id/TextViewLoginWelcome"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:inputType="textPassword"
            android:id="@+id/EditTextLoginPassword"
            android:layout_below="@+id/TextViewLoginPassword"
            android:layout_alignLeft="@+id/TextViewLoginWelcome"
            android:layout_alignStart="@+id/TextViewLoginWelcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/TextViewLoginPassword"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
           android:layout_centerHorizontal="true"
            android:textColor="#fdfaff"
            android:layout_below="@+id/EditTextLoginUSN" />


    <EditText
            android:layout_height="wrap_content"
            android:layout_width="250dp"
        android:layout_centerHorizontal="true"
            android:id="@+id/EditTextLoginUSN"
        style="@style/Base.V12.Widget.AppCompat.EditText"
        android:layout_below="@+id/TextViewLoginUSN"
        android:layout_alignLeft="@+id/EditTextLoginPassword"
        android:layout_alignStart="@+id/EditTextLoginPassword" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:onClick="onClickLogin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_alignBottom="@+id/registerButton"
            android:layout_alignLeft="@+id/EditTextLoginPassword"
            android:layout_alignStart="@+id/EditTextLoginPassword" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_register"
            android:onClick="onClickRegister"
            android:id="@+id/registerButton"
            android:baselineAlignBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/EditTextLoginPassword"
            android:layout_alignRight="@+id/EditTextLoginUSN"
            android:layout_alignEnd="@+id/EditTextLoginUSN" />

</RelativeLayout>